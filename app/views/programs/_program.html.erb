<div class="col-sm-3 single-post-card" id=<%= sections_path %>>
  <div class="card">
    <div class="card-block">
      <h4 class="post-text">
        <%= truncate(program.name, :length => 1000) %>
          <div class= "class">
           <%=link_to "Start Program!", program_path(program), :style=> 'color:#000000;', :class => 'css_class'%>
          </div>
      </h4>
      <div class="post-content">
        <div class="posted-by">Posted by User <%= program.user.email %></div>
        <h3><%= program.name %></h3> 
        <p><%= program.description %></p>
        <%= button_to "Close", programs_path, class: 'close' %>
      </div>
    </div>
  </div><!-- card -->
</div><!-- col-sm-3 -->

