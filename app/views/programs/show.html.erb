
<div class="col-sm-3 single-post-card" id=<%= program_path %>>
  <div class="card">
    <div class="card-block">
      <h4 class="post-text">
        <%= truncate(@program.description, :length => 1000) %>
      </h4>
    </div>
  </div><!-- card -->
</div><!-- col-sm-3 -->

<div class="container">
  <div class="row">
    <div id="side-menu"  class="col-sm-3">
    </div><!-- side-menu -->

    <div id="main-content" class="col-sm-9">
        <%= render @sections %>
    </div><!-- main-content -->
  </div><!-- row -->
</div><!-- container -->

<div>
    <%= @program.description %>
</div><!-- main-content -->
